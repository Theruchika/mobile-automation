{
  "name": "akesa-health-automation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test:local": "npx wdio run ./config/wdio.local.conf.ts",
    "test:bs": "npx wdio run ./config/wdio.bs.conf.ts",

    "allure:generate": "npx allure generate \"reports/allure-results\" -o \"reports/allure-report\"",
    "allure:open": "npx allure open \"reports/allure-report\"",
    "allure:clean": "rd /s /q \"reports\\allure-results\" & rd /s /q \"reports\\allure-report\"",
    "report": "npm run allure:clean && npm run test:local && npm run allure:generate && npm run allure:open"
  },
  
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@wdio/browserstack-service": "^9.19.1",
    "@wdio/globals": "^8.46.0",
    "allure-commandline": "^2.34.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
    },
  "dependencies": {
    "@wdio/allure-reporter": "^9.18.0",
    "@wdio/appium-service": "^9.18.4",
    "@wdio/cli": "^9.18.4",
    "@wdio/local-runner": "^9.18.4",
    "@wdio/mocha-framework": "^9.18.0",
    "@wdio/spec-reporter": "^9.18.0",
    "@wdio/types": "^9.16.2",
    "@wdio/visual-service": "^9.0.0",
    "appium-uiautomator2-driver": "^4.2.7",
    "chai": "^4.4.1",
    "webdriverio": "^8.26.2"
  },
  "description": "Test framework for Akesa Health native app built with TypeScript and WDIO"
}
